- label_class = 'col-sm-3 col-form-label text-right'
.form-group.row
  = f.label :text, class: label_class
  .col-sm-9
    = f.text_field :text, class: 'form-control'
    = error_label_tag(f.object, :text)
.form-group.row
  = f.label :link, class: label_class
  .col-sm-9
    = f.text_field :link, class: 'form-control'
    = error_label_tag(f.object, :link)